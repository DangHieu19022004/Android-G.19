<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/ts_book_saved"
    android:id="@+id/gravItemBook_manage">

    <ImageView
        android:id="@+id/ImageBook_manage"
        android:scaleType="fitXY"
        android:layout_width="140dp"
        android:layout_height="@dimen/sizebook_manage"
        android:src="@drawable/babylon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/likeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/likeIcon_manage"
                    style="@style/IconDetailLike"
                    android:layout_width="53dp"
                    android:src="@drawable/likeicon" />

                <TextView
                    android:id="@+id/txtLikeCount_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like"
                    android:textSize="@dimen/sizecontenttext" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dislikeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dislikeIcon_manage"
                    style="@style/IconDetailLike"
                    android:layout_height="80dp"
                    android:layout_width="53dp"

                    android:padding="12dp"
                    android:src="@drawable/dislikeicon" />

                <TextView
                    android:textSize="@dimen/sizecontenttext"
                    android:id="@+id/txtDislikeCount_manage"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like" />
            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit_manage"
                    android:src="@drawable/pen"
                    android:layout_width="63dp"

                    style="@style/IconDetailLike" />

                <TextView
                    android:gravity="center"
                    android:text="@string/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sizecontenttext"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="63dp"
                    android:id="@+id/trashBook_manage"
                    android:src="@drawable/trash"
                    style="@style/IconDetailLike" />

                <TextView
                    android:gravity="center"
                    android:text="@string/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sizecontenttext"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/book_title_manage"
            android:layout_marginRight="@dimen/mgtop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:minLines="2"
            android:layout_marginStart="@dimen/pdtop"
            android:layout_marginEnd="@dimen/pdtop"
            android:text="Book Title with long text that may exceed the width of the TextView"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>